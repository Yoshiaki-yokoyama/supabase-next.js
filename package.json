{
  "name": "supabase-monorepo",
  "private": true,
  "description": "Supabase Monorepo",
  "workspaces": {
    "packages": ["packages/*"],
    "nohoist": ["**/bulma", "**/bulma/**"]
  },
  "engines": {
    "node": ">=10.15.1",
    "yarn": "1.x"
  },
  "scripts": {
    "build": "yarn run build:web",
    "build:web": "yarn workspace @supabase/web build",
    "deploy:web": "yarn workspace @supabase/web deploy",
    "dev": "concurrently --kill-others-on-fail \"yarn dev:web\" ",
    "dev:web": "yarn workspace @supabase/web dev"
  },
  "dependencies": {
    "concurrently": "^5.0.0"
  },
  "devDependencies": {
    "prettier": "^1.18.2"
  }
}
